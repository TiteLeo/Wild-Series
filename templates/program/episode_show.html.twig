{%  extends 'base.html.twig' %}

{% block title %} Série {% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="text-dark mb-5 text-center mt-4"> {{ program.title }} </h1>
            <p class="text-dark">{{ season.description }}</p>
            <h3 class="text-dark"> Episodes {{ episode.number }} - {{ episode.title }}</h3>
            <p class="text-dark">{{ episode.synopsis }}</p>
        </div>
        <a class="text-dark" href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </div>
{% endblock %}
